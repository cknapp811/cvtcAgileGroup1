<%= form_for([@property, @property.reviews.build]) do |f| %>    

    <div id="review_fields">
        <div class="field">
          <div id="ratings">
            <%= f.label :rating %>
            <%= f.hidden_field :rating %>
            <ul>
              <%(1..5).each do |i| %>
              <li class = "rating_star" data-stars= "<%= i %>" data-property-id="<%= @property.id %>" id="<%= "#{@property.id}_#{i}"%>"></li>
              <%end%>
            </ul>
          </div>
        </div>
        <div class="field">
          <div id="review">
            <%= f.label :review %>
            <%= f.text_area :explanation, :required => true, :rows =>4 %>
          </div>
        </div>
      </div>
      <br>
      <div id="submit" class="actions">
        <%= f.submit %>
      </div> 
<% end %>
