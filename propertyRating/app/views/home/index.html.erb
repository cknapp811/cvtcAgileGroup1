<title>Property World</title>
<link href="style.css" rel="stylesheet">
<div class="splash">
  <div class="sec1">
    <header>
      <h1>Welcome to Property World</h1>
    </header>
      <%= form_tag(properties_path, :method => "get", id: "search-form") do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search Properties" %>
        <%= submit_tag "Search" %>
      <% end %>
      <div class="latest">
        <h3>Most Recently Reviewed Properties</h3>
        <table>
          <thead>
            <tr>
              <th>Address</th>
              <th>Average Rating</th>
            </tr>
          </thead>  
          <tbody>
            <% @properties.each do |property|%>
              <tr>
                <td><%= property.address %></td>
                <td><%= property.average_rating.round(2) %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div> <!-- end of "latest" -->
  </div>  <!-- end of "sec1" -->
</div>  <!-- end of "splash" -->